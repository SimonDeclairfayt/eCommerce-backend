generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Users {
  id              Int      @id @default(autoincrement())
  email           String   @unique @db.VarChar(255)
  first_name      String   @db.VarChar(100)
  last_name       String   @db.VarChar(100)
  password        String
  is_admin        Boolean  @default(false)
  shipping_adress String
  Orders          Orders[]
}

model Collections {
  id           Int      @id @default(autoincrement())
  date_created DateTime @default(now())
  name         String   @db.VarChar(255)
  Items        Items?
}

model Items {
  id            Int          @id @unique @default(autoincrement())
  collection_id Int          @unique
  collection    Collections  @relation(fields: [collection_id], references: [id])
  name          String       @db.VarChar(255)
  description   String       @db.VarChar(255)
  product_type  String       @db.VarChar(100)
  stock         Int
  price         Int
  date_created  DateTime     @default(now())
  Order_items   Order_items?
  Items_img     Items_img[]
}

model Items_img {
  id        Int     @id @unique @default(autoincrement())
  item_id   Int
  items     Items   @relation(fields: [item_id], references: [id])
  image_url String
  is_main   Boolean @default(false)
}

model Orders {
  id              Int           @id @unique @default(autoincrement())
  user_id         Int?
  user            Users?        @relation(fields: [user_id], references: [id])
  total_price     Int
  order_date      DateTime      @default(now())
  order_status    String        @db.VarChar(50)
  shipping_adress String        @db.VarChar(1024)
  first_name      String        @db.VarChar(50)
  last_name       String        @db.VarChar(255)
  email           String        @db.VarChar(255)
  Order_items     Order_items[]
}

model Order_items {
  id       Int    @id @unique @default(autoincrement())
  quantity Int
  item_id  Int    @unique
  item     Items  @relation(fields: [item_id], references: [id])
  order_id Int    @unique
  order    Orders @relation(fields: [order_id], references: [id])
}
